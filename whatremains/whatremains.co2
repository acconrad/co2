 ;; doors to other dimensions

 (defsub (doorway-collide-pos door x y)
   (set! i (<< door 2))
   (and ;; check bounding boxes
    (and
     (> x (peek doorway-bbox i))
     (< x (peek doorway-bbox (+ i 2))))
    (and
     (> y (peek doorway-bbox (+ i 1)))
     (< y (peek doorway-bbox (+ i 3))))))

