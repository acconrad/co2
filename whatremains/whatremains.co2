 ;; calls the random number generator
 (defsub (rnd) (_rnd))

 (defsub (wait-new-frame)
   ; Assumes that gframe is at $00.
   (asm "lda $00")
   (asm "WaitLoop:")
   (asm "cmp $00")
   (asm "beq WaitLoop"))

